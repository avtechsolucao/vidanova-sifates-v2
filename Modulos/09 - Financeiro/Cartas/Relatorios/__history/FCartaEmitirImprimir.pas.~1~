      QRDBText2: TQRDBText;
      procedure FormClose(Sender: TObject; var Action: TCloseAction);
      procedure FormCreate(Sender: TObject);
   private
      { Private declarations }
   public
      { Public declarations }
   end;

var
   FrmCartaEmitirImprimir: TFrmCartaEmitirImprimir;

implementation

uses FCartaEmitir;

{$R *.dfm}

